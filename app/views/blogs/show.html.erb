<h1>Blog content</h1>
<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @blog.description %>
</p>

<%= link_to 'modify', edit_blog_path(@blog) %>
<%= link_to 'delete', @blog, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'back to', blogs_path %>
<hr>

<h3>comment</h3>
 <% @blog.comments.each_with_index do |comment, index| %>
	  	<div>
			<p>
				<span><%= index+1 %>.</span>
					<%= comment.comment %>
				<span>
					<%= link_to 'delete comment', [comment.blog, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
				</span>
			</p>
		</div>
    <% end %>
<hr>

<h3>
	new comment :
</h3>
